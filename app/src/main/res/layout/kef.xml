<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/chelesai"
        style="@style/Iitxe_Chelesai"
        app:cardBackgroundColor="@color/Piisa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:strokeColor="@color/Tiisha"
        app:cardElevation="0dp"
        app:contentPadding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/laarinak"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:text="@string/app_name"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/Kpaa"
                android:visibility="visible" />
            <TextView
                android:id="@+id/kefskakefai"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:text="@string/app_name"
                android:gravity="center"
                android:layout_marginEnd="8dp"
                android:textSize="12sp"
                android:textColor="@color/Kpaa"
                android:visibility="gone" />

            <com.google.android.material.card.MaterialCardView
                style="@style/Iitxe_Ciihii"
                app:cardBackgroundColor="@color/Tiisha"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:strokeColor="@color/Tawa"
                android:layout_marginEnd="8dp"
                app:cardElevation="0dp"
                android:layout_weight="1"
                app:contentPadding="4dp">

                <TextView
                    android:id="@+id/skakef"
                    style="@style/Kef"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textColor="@color/Kpaa"
                    android:text="@string/app_name"
                    android:gravity="center"/>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/kiihiikef"
                style="@style/Kef"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:text="@string/app_name"
                android:textColor="@color/Kpaa"
                android:gravity="center" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ciiqlaarinak"
        android:layout_width="8dp"
        android:layout_height="8dp"
        app:layout_constraintTop_toTopOf="@id/chelesai"
        app:layout_constraintStart_toStartOf="@id/chelesai"
        app:cardBackgroundColor="@color/material_dynamic_tertiary80"
        android:layout_margin="4dp"
        app:strokeColor="@android:color/transparent"
        app:cardElevation="0dp"
        android:visibility="gone"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ciiqtsalii"
        android:layout_width="8dp"
        android:layout_height="8dp"
        app:layout_constraintBottom_toBottomOf="@id/chelesai"
        app:layout_constraintEnd_toEndOf="@id/chelesai"
        app:cardBackgroundColor="@android:color/system_accent1_200"
        android:layout_margin="4dp"
        app:strokeColor="@android:color/transparent"
        app:cardElevation="0dp"
        android:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>